rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Prescription uploads: authenticated users only; images and PDF, max 5MB
    match /prescriptions/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*|application/pdf');
    }
    // Signup documents: owner can write; any authenticated user can read (for profile view / admin)
    match /signup_docs/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // All other paths: require auth
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
} 
